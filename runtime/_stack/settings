#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/dotnet/runtime"
export VCW_STACK_GLOBAL_STACKNAMES="dotnet"
export VCW_STACK_GLOBAL_BOOTSTACKS="dotnet"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume:/app"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_DOTNET_PORTS,\
$VCW_STACK_DOTNET_NETWORKS,\
$VCW_STACK_DOTNET_VOLUMES,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="dotnetcore"
export VCW_STACK_GLOBAL_IMAGE_NAME="mcr.microsoft.com/dotnet/runtime"
export VCW_STACK_DOTNET_PORTS=
export VCW_STACK_DOTNET_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_DOTNET_VOLUMES="'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume:/app'"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS artifactory.base
export VCW_STACK_DOTNET_ENVIRONMENT="${CONFIGURATION_MODULE_DOTNET_ENVIRONMENT}"
export VCW_STACK_DOTNET_COMMAND="${CONFIGURATION_MODULE_DOTNET_COMMAND}"
export VCW_STACK_DOTNET_DEPLOY_MODE="${CONFIGURATION_MODULE_DOTNET_MODE}"
export VCW_STACK_DOTNET_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_DOTNET_MEMORY_LIMIT}"
export VCW_STACK_DOTNET_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_DOTNET_MEMORY_RESERVED}"
# END SETTINGS artifactory.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
